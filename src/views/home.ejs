<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Home Page</title>
   <link rel="stylesheet" href="/css/style.css">
</head>

<style>
   table {
      border-collapse: collapse;
      width: 100%;
   }

   th,
   td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
   }

   tr:hover {
      background-color: #ccc;
      cursor: pointer;
   }

   .table-container {
      padding: 15px 20px;
   }

   .title {
      font-size: 25px;
      font-weight: 600;
      padding-bottom: 10px;
   }
</style>

<body>
   <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create Users</a>
   </div>
   <div class="table-container">
      <!-- Định dạng dữ liệu cho HTML nó hiểu (JSON) -->
      <!-- Từ JS muốn chuyển dữ liệu về HTML phải định dạng JSON -->
      <!-- <%= JSON.stringify(listUsers) %> -->
      <div class="title">List Users</div>
      <table>
         <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>City</th>
            <th>Action</th>
         </tr>

         <% listUsers.forEach(function(i) { %>
            <tr>
               <th>
                  <%= i.id %>
               </th>
               <th>
                  <%= i.email %>
               </th>
               <th>
                  <%= i.name %>
               </th>
               <th>
                  <%= i.city %>
               </th>
               <th>
                  <a href="/update/<%= i.id %>">Edit</a>

                  <form action="delete-user/<%= i.id %>" method="POST">
                     <button>Delete</button>
                  </form>
               </th>
            </tr>
            <% }); %>
      </table>
   </div>
</body>

</html>